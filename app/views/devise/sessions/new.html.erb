<!-- Content area start -->
<div class="contact-bg overview-bgi">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Form content box start -->
                <div class="form-content-box">
                    <!-- logo -->
                    <!-- details -->
                    <div class="details">
                        <h3>サインイン</h3>
                        <!-- Form start -->
                        <!--<form action="https://storage.googleapis.com/themevessel-items/hotel-alpha/index.html" method="GET">-->
                        <%= form_for(resource, as: resource_name, url: new_user_session_path) do |f| %>
                            <div class="form-group">
                                 <%= f.email_field :email,class: "input-text", placeholder: "メールアドレス" %>
                            </div>
                            <div class="form-group">
                                <%= f.password_field :password, autocomplete: "current-password",class:"input-text", placeholder: "パスワード" %>
                            </div>
                            <div class="checkbox">
                                <div class="ez-checkbox pull-left">
                                    <label>
                                        <input type="checkbox" class="ez-hide">
                                        次回からログインを省略する
                                    </label>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="mb-0">
                                 <%= f.submit "サインイン",class: "btn-md btn-theme btn-block" %>
                            </div>
                        <!--</form>-->
                        <% end %>
                        <!-- Form end -->
                    </div>
                </div>
                <!-- Form content box end -->
            </div>
        </div>
    </div>
</div>
